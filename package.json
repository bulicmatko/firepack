{
  "name": "firepack",
  "version": "0.0.0-semantically-released",
  "description": "Firebase application wrapper",
  "main": "./src/index.js",
  "files": [
    "./src",
    "./README.md"
  ],
  "scripts": {
    "build": "NODE_ENV=production webpack --optimize-minimize --progress --colors",
    "check": "npm run lint && npm run flow && npm run test && npm run cover && npm run check-coverage",
    "check-coverage": "nyc check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "commit": "git-cz",
    "cover": "nyc npm run test --report-dir=./public/coverage --reporter=html --reporter=lcov && nyc report --report-dir=./public/coverage",
    "deploy": "npm run check && npm run build && firebase deploy",
    "flow": "flow",
    "lint": "eslint ./src",
    "report-coverage": "nyc report --report-dir=./public/coverage --reporter=text-lcov > ./public/coverage/coverage.lcov && ./node_modules/.bin/codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "server": "firebase serve",
    "start": "webpack-dev-server --inline --hot --progress --colors --port=8888",
    "test": "mocha --recursive --compilers=js:babel-register",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bulicmatko/firepack.git"
  },
  "keywords": [
    "firepack",
    "firebase",
    "react",
    "redux"
  ],
  "author": "Matko Bulic <bulicmatko@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/bulicmatko/firepack",
  "bugs": {
    "url": "https://github.com/bulicmatko/firepack/issues"
  },
  "dependencies": {
    "firebase": "^3.1.0",
    "immutable": "^3.8.1",
    "lodash": "^4.13.1",
    "react": "^15.2.0",
    "react-css-modules": "^3.7.7",
    "react-dom": "^15.2.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.2",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.3"
  },
  "peerDependencies": {
    "firebase": "^3.1.0",
    "immutable": "^3.8.1",
    "lodash": "^4.13.1",
    "react": "^15.2.0",
    "react-css-modules": "^3.7.7",
    "react-dom": "^15.2.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.2",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.3"
  },
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "bourbon": "^4.2.7",
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.2",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.10.2",
    "eslint-plugin-jsx-a11y": "^1.5.5",
    "eslint-plugin-react": "^5.2.2",
    "firebase-tools": "^3.0.4",
    "flow-bin": "^0.28.0",
    "ghooks": "^1.3.2",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "nyc": "^7.0.0",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "resolve-url-loader": "^1.6.0",
    "sass-loader": "^4.0.0",
    "semantic-release": "^4.3.5",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=4.2.1 <6",
    "npm": ">=3.10.3 <4"
  }
}
